<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" prefHeight="445.0" prefWidth="711.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
    <gridLinesVisible>true</gridLinesVisible>
    <HBox GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Text text="Inventory Management System"/>
    </HBox>
    <GridPane alignment="left" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
        <padding>
            <Insets bottom="10" left="10" right="10" top="25"/>
        </padding>
        <gridLinesVisible>true</gridLinesVisible>
        <Text text="Parts" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />
        <Button text="Search" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TableView GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="1" fx:id="productsTableView">
            <placeholder>
                <Label text="No rows to display"/>
            </placeholder>
            <columns>
                <TableColumn text="Part ID" fx:id="partIdColumn"/>
                <TableColumn text="Part Name" fx:id="partNameColumn" />
                <TableColumn text="Inventory Level" fx:id="inventoryLevelColumn"/>
                <TableColumn text="Price/Cost per Unit" fx:id="priceOverCostPerUnitColumn"/>
            </columns>
        </TableView>
        <Button text="Add" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Button text="Modify" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Button text="Delete" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    </GridPane>
</GridPane>
